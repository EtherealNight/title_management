		<mx:MenuBar width="100%" bottom="-5" height="30" x="1"></mx:MenuBar>
		<s:Button x="10" y="108" label="Run Report" includeIn="title"/>
		<s:RadioButton x="10" y="27" label="All Processors" groupName="radiogroup1" includeIn="title"/>
		<s:RadioButton x="10" y="53" label="Single Processor:" groupName="radiogroup1" includeIn="title"/>
