				<fx:String>AVM</fx:String>
				<fx:String>Signing</fx:String>
				<fx:String>Closing</fx:String>
			</mx:ArrayCollection>
		</s:DropDownList>
		<mx:FormItem label="Loan Number" x.Main="10" y.Main="74">
			<s:TextInput id="loanNumber"/>
