		<s:Label x="351" y="7" text="2.Order Date:" fontWeight="bold" fontSize="12" includeIn="title"/>
		<mx:DateField x="392" y="27" width="131" x.Main="250" y.Main="28" id="fromDate"/>
		<mx:DateField x="392" y="58" width="131" x.Main="422" y.Main="28" id="toDate"/>
		<s:Label x="351" y="38" text="From:" includeIn="title"/>
		<s:Label x="351" y="69" text="To:" x.Main="398" y.Main="39"/>
		
		<s:Label x="822" y="4" text="4. Busted Date:" fontWeight="bold" fontSize="12" includeIn="title"/>
		<mx:DateField x="628" y="26" width="131" includeIn="title"/>
		<mx:DateField x="628" y="58" width="131" includeIn="title"/>
		<s:Label x="822" y="37" text="From:" includeIn="title"/>
		<s:Label x="822" y="68" text="To:" includeIn="title"/>
		
		<s:Label x="583" y="6" text="3. Closing Date:" fontWeight="bold" fontSize="12" includeIn="title"/>
		<mx:DateField x="860" y="26" width="131" includeIn="title"/>
		<mx:DateField x="860" y="57" width="131" includeIn="title"/>
		<s:Label x="587" y="38" text="From:" x.Main="196" y.Main="40" height.Main="15"/>
		<s:Label x="590" y="69" text="To:" includeIn="title"/>
		
		<!--Reporting Data Grid-->
		<!--Report Data Grid Data Provider Goes here-->
		<!--Report Data Grid Provider Ends here-->
		<mx:DataGrid x="16" y="244" width="1004" height="190" includeIn="title">
			<mx:columns>
				<mx:DataGridColumn headerText="Report ID" dataField="col1"/>
				<mx:DataGridColumn headerText="Processor" dataField="col2"/>
				<mx:DataGridColumn headerText="Order Date" dataField="col3"/>
				<mx:DataGridColumn headerText="Closing Date" dataField="col2"/>
				<mx:DataGridColumn headerText="Busted Date" dataField="col2"/>
			</mx:columns>
		</mx:DataGrid>
		<!--End of Reporting Data Grid-->
		<!--Footer Label-->
		<s:Label x="8" y="449" text="2015 First Title. All rights Reserved"/>
		<s:DropDownList includeIn="Main" x="20" y="30" selectedIndex="-1" id="productName">
			<mx:ArrayCollection>
				<fx:String>All</fx:String>
				<fx:String>Title</fx:String>
				<fx:String>Property</fx:String>
				<fx:String>Appraisal</fx:String>
				<fx:String>Flood</fx:String>
