		<mx:FormItem label="Buyer's Last Name" x.Main="320" y.Main="198">
			<s:TextInput id="buyerLastName"/>
		</mx:FormItem>
		<mx:FormItem label="State" x.Main="10" y.Main="228">
			<s:DropDownList id="statesCombo"></s:DropDownList>
		</mx:FormItem>
		<mx:FormItem label="Status" includeIn="Main" x="10" y="133">
			<s:DropDownList id="reportStatus"></s:DropDownList>
		</mx:FormItem>
		<mx:FormItem label="Comments" includeIn="Main" x="11" y="164" width="303">
			<s:DropDownList width="218" id="comments"></s:DropDownList>
		</mx:FormItem>
		<s:HGroup includeIn="Main" x="127" y="274" width="365" height="36" chromeColor="#067DAF" contentBackgroundColor="#051660" contentBackgroundAlpha="0.18">
			<mx:FormItem label="Sort By:">
				<s:DropDownList id="sortBy"></s:DropDownList>
			</mx:FormItem>
			<mx:Spacer width="30"/>
			<s:Button includeIn="Main" label="Search" id="searchBtn"/>
		</s:HGroup>
	</s:Panel>
</s:Group>
